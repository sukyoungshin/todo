{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "CommonJS",
    "verbatimModuleSyntax": false,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "isolatedModules": false,
    "noImplicitAny": false,
    "strict": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
